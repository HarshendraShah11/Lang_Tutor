<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shah.langtutor">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--Main Activity-->
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--Language Activities-->
        <activity
            android:name=".Gujarati.GujaratiActivity"
            android:label="@string/gujarati"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".HIndi.HindiActivity"
            android:label="@string/hindi"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".Marathi.MarathiActivity"
            android:label="@string/marathi"
            android:parentActivityName=".MainActivity"/>

        <activity
            android:name=".French.FrenchActivity"
            android:label="@string/french"
            android:parentActivityName=".MainActivity"/>


    </application>

</manifest>